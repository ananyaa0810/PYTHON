print("Welcome to my computer quiz!")
Marks=0
playing = input("Do you want to play? ")
if playing != "yes":
quit()
print("Okay! Let's play")
print("Write your answers in lowercase")
question = ("What does CPU stand for? ")
print(question)
answer = input("answer: ")
if answer == "central processing unit":
print("Correct!")
Marks+=1
else:
print("Incorrect!")
Marks-=0.5
question = ("What does GPU stand for? ")
print(question)
answer = input("answer: ")
if answer == "graphics processing unit":
print("Correct!")
Marks+=1
else:
print("Incorrect!")
Marks-=0.5
question = ("What does RAM stand for? ")
print(question)
answer = input("answer: ")
if answer == "random access memory":
print("Correct!")
Marks+=1
else:
print("Incorrect!")
Marks-=0.5
question = ("What does ROM stands for? ")
print(question)
answer = input("answer: ")
if answer == "read only memory":
print("Correct!")
Marks+=1
else:
print("Incorrect!")
Marks-=0.5
print("Your final score is ",Marks)
print("Thank you")
